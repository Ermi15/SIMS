<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox spacing="10" alignment="TOP_CENTER"
      maxWidth="Infinity" maxHeight="Infinity"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.controller.StudentController">

    <Label fx:id="titleLabel" text="Students" style="-fx-font-size: 20px;"/>

    <HBox spacing="5">
        <TextField fx:id="idField" promptText="UGR/XXXX/YY" prefWidth="120"/>
        <TextField fx:id="nameField" promptText="Name" prefWidth="120"/>
        <TextField fx:id="dobField" promptText="DOB (YYYY-MM-DD)" prefWidth="120"/>
        <TextField fx:id="emailField" promptText="Email" prefWidth="150"/>
        <Button fx:id="addBtn" text="Add" onAction="#handleAdd" prefWidth="60"/>
        <Button fx:id="deleteBtn" text="Delete" onAction="#handleDelete" prefWidth="70"/>
        <Button text="Back" onAction="#handleBack" prefWidth="60"/>
    </HBox>

    <TableView fx:id="studentTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn text="ID" prefWidth="120"><cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory></TableColumn>
            <TableColumn text="Name" prefWidth="120"><cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory></TableColumn>
            <TableColumn text="DOB" prefWidth="100"><cellValueFactory><PropertyValueFactory property="dobString"/></cellValueFactory></TableColumn>
            <TableColumn fx:id="ageColumn" text="Age" prefWidth="60"/>
            <TableColumn text="Email" prefWidth="150"><cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory></TableColumn>
        </columns>
    </TableView>

    <Label fx:id="messageLabel"/>
</VBox>