<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox spacing="10" alignment="TOP_CENTER"
      maxWidth="Infinity" maxHeight="Infinity"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.controller.GradeController"
      style="-fx-padding: 20;">

    <Label fx:id="titleLabel" text="Grades" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="enrollmentIdField" promptText="ENR/XXX" prefWidth="100"/>
        <TextField fx:id="marksField" promptText="0-100" prefWidth="80"/>
        <TextField fx:id="gradeField" promptText="A-F" prefWidth="60"/>

        <Button fx:id="addBtn" text="Add" onAction="#handleAdd" prefWidth="60"/>
        <Button fx:id="deleteBtn" text="Delete" onAction="#handleDelete" prefWidth="70"/>
        <Button text="Back" onAction="#handleBack" prefWidth="60"/>
    </HBox>

    <TableView fx:id="gradeTable" prefHeight="300" prefWidth="350">
        <columns>
            <TableColumn text="Enrollment ID" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="enrollmentId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Marks" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="marks"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Grade" prefWidth="60">
                <cellValueFactory>
                    <PropertyValueFactory property="grade"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label fx:id="messageLabel"/>
</VBox>