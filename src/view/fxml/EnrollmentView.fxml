<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="TOP_CENTER"
      maxWidth="Infinity" maxHeight="Infinity"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.controller.EnrollmentController"
      style="-fx-padding: 20;">

    <Label fx:id="titleLabel" text="Enrollments" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="5" alignment="CENTER">
        <TextField fx:id="idField" promptText="ENR/XXX" prefWidth="100"/>
        <TextField fx:id="studentIdField" promptText="UGR/XXXX/YY" prefWidth="120"/>
        <TextField fx:id="courseCodeField" promptText="CS101" prefWidth="80"/>
        <TextField fx:id="semesterField" promptText="1 (Spring)" prefWidth="80"/>

        <Button fx:id="addBtn" text="Add" onAction="#handleAdd" prefWidth="60"/>
        <Button fx:id="deleteBtn" text="Delete" onAction="#handleDelete" prefWidth="70"/>
        <Button text="Back" onAction="#handleBack" prefWidth="60"/>
    </HBox>

    <TableView fx:id="enrollmentTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn text="Enrollment ID" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Student ID" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="studentId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Course Code" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="courseCode"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Semester" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="semesterCode"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label fx:id="messageLabel"/>
    <Label text="Semester Codes: 1=Spring, 2=Summer, 3=Fall" style="-fx-font-size: 11px; -fx-text-fill: gray;"/>
</VBox>